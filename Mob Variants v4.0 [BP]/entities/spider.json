      },
      "minecraft:collision_box": {
        "width": 1.4,
        "height": 0.9
      },
      "minecraft:health": {
        "value": 16,
        "max": 16
      },
      "minecraft:hurt_on_condition": {
        "damage_conditions": [
          {
            "filters": {
              "test": "in_lava",
              "subject": "self",
              "operator": "==",
              "value": true
            },
            "cause": "lava",
